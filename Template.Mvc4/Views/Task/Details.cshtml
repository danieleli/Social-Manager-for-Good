@model Template.Mvc4.Models.Task

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Task</legend>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">ModifyDate</div>
    <div class="display-field">@String.Format("{0:g}", Model.ModifyDate)</div>

    <div class="display-label">TimeEntries</div>
    <div class="display-field">@(Model.TimeEntries == null ? "None" : Model.TimeEntries.Count.ToString())</div>

    <div class="display-label">SubTasks</div>
    <div class="display-field">@(Model.SubTasks == null ? "None" : Model.SubTasks.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


