@{
  ViewBag.Title = "Gallery";
  Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Sample Gallery</title>
  @Html.Partial("_Head")
  <link href="../../Content/lib/slicebox/slicebox.css" rel="stylesheet" type="text/css" />
  <style type="text/css">
    #gallery-container
    {
      min-height: 700px;
      padding-top: 100px;
      visibility: hidden;
    }
    #scroll-hider
    {
      z-index: 1000;
      display: inline-block;
      background: white;
      width: 30px;
      height: 530px;
      left: -30px;
      top: -10px;
      position: relative;
    }
    .tag-label
    {
      width: 120px;
      text-align: center;
      vertical-align: middle;
      height: 100%;
    }
    table
    {
      width: 240px;
    }
    table tr
    {
      width: 240px;
      color: #eee;
      background: #fff;
      -webkit-transition: background .5s linear;
      transition: background .25s linear;
    }
    table tr:hover
    {
      color: #eee;
      background: #666;
      -webkit-transition: background .5s linear;
      transition: background .25s linear;
    }
    .my-sidebar
    {
      display: inline-block;
      width: 270px;
      height: 500px;
      overflow: auto;
    }
    .my-sidebar img
    {
      width: 80px;
      display: inline-block;
      margin: 10px auto;
      position: relative;
      left: -5px;
    }
    #sb-slider-container
    {
      display: inline-block;
      position: relative;
      left: 100px;
    }
    .sb-slider img
    {
      height: 500px;
      display: inline-block;
      margin: auto;
    }
  </style>
</head>
<body>
  <header>
    @Html.Partial("_Header")
  </header>
  <div class="container" id="body">
    <div class="content">
      <div id="gallery-container">
        <table id="gallery-tags" class="my-sidebar">
          <tr>
            <td class="tag-label">
              architecture
            </td>
            <td>
              <img class="tag-image" src="http://farm3.staticflickr.com/2166/3540475536_1269d691a2_z.jpg?zz=1" />
            </td>
          </tr>
          <tr>
            <td class="tag-label">
              k models
            </td>
            <td>
              <img class="tag-image" src="http://farm3.staticflickr.com/2496/3871524465_d2fcfaac67_z.jpg" />
            </td>
          </tr>
          <tr>
            <td class="tag-label">
              dogs
            </td>
            <td>
              <img class="tag-image" src="http://farm1.staticflickr.com/61/203304099_c6759a5e9c_z.jpg?zz=1" />
            </td>
          </tr>
          <tr>
            <td class="tag-label">
              books
            </td>
            <td>
              <img class="tag-image" src="http://farm1.staticflickr.com/31/51898473_e22ee83693_z.jpg?zz=1" />
            </td>
          </tr>
        </table>
        <div id="scroll-hider">
        </div>
        <div id="sb-slider-container">
          <div id="sb-slider" class="sb-slider">
            <img src="http://farm1.staticflickr.com/185/423783878_b9dab79834.jpg" title="test2" />
            <img src="http://farm5.staticflickr.com/4100/4865923841_75e8239a8b_b.jpg" title="test" />
            <img src="http://farm5.staticflickr.com/4122/4865924361_4c428ffe32_b.jpg" title="test2" />
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="script-wrapper">
    @Html.Partial("_Scripts")
    @if (false)
    { 
      <script src="../../Content/lib/jquery/jquery-1.7.1-vsdoc.js" type="text/javascript"></script>
    }
    <script src="../../Content/lib/slicebox/jquery.easing.1.3.js" type="text/javascript"></script>
    <script src="../../Content/lib/slicebox/modernizr.custom.13303.js" type="text/javascript"></script>
    <script src="../../Content/lib/slicebox/jquery.slicebox.js" type="text/javascript"></script>
    <script type="text/javascript">

      $(function () {
        $('table tr').click(function () {
          humane("This will change the slider's source gallery")
        });

        $('#sb-slider').slicebox({
          orientation: '4',
          slicesCount: 3,
          disperseFactor: 25,
          sequentialRotation: true,
          sequentialFactor: 140
        });


        if (!Modernizr.csstransforms3d) {
          $('#sb-note').show();

          $('#sb-examples > li:gt(2)').remove();

          $('body').append(
            $('script').attr('type', 'text/javascript').attr('src', 'js/jquery.easing.1.3.js')
          );
        }
        setTimeout("$('#gallery-container').css('visibility', 'visible')", 1000)

      });
    </script>
  </div>
</body>
</html>
