@{
  ViewBag.Title = "Home Page";
}
@section featured {
  <section class="featured">
    <div class="content-wrapper">
      <div class="content home">
        <section>
          <div class="adjectives">
            <p>easy</p>
            <p>specific</p>
            <p>steps</p>
          </div>
          <div style="width: 130px; display: inline-block;"></div>
          <div class="steps">
            <ol>
              <li><b>step 1: </b>Enter new campaign (or event.)</li>
              <li><b>step 2: </b>Plan specific actions.</li>
              <li><b>step 3: </b>Done.</li>
              <li>&nbsp;</li>
              <li style="margin-left:50px; display: block;">
                <a class="arrow" href="/campaigns/social">
                    <span class="arrow_body">see demo</span><span class="arrow_head"></span>
                </a>
              </li>
            </ol>
          </div>
        </section>
      </div>
    </div>
  </section>
}
<section class="features">
  <section class="feature" style="position: relative;">
    <!-- Begin MailChimp Signup Form -->
    <div id="mc_embed_signup">
      <form style="display: inline-block;" action="http://softwaresingularity.us2.list-manage.com/subscribe/post?u=9c9f1781c7b92f21aa9aad04d&amp;id=e806b3483a"
            method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate"
            target="_blank">
        <label for="mce-EMAIL">Sign up for our private beta</label>
        <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address"
               required>
        <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe"
               class="bcvutton btn">
      </form>
      <span class="poweredWrapper" style="padding: 20px 0; margin: 0 auto; margin-left: 60px;">
        <span class="poweredBy" style="display: inline-block; vertical-align: middle;">
          <a href="http://www.mailchimp.com/monkey-rewards/?aid=9c9f1781c7b92f21aa9aad04d&amp;afl=1"
             style="color: #336699;">
            <img src="https://d2q0qd5iz04n9u.cloudfront.net/_ssl/proxy.php/http/gallery.mailchimp.com/089443193dd93823f3fed78b4/images/postmark_mailchimp_red.gif"
                 border="0" alt="Email Marketing Powered by MailChimp" title="MailChimp Email Marketing"></a></span>
      </span>
    </div>
    <div class="reveal-tab" style="position: absolute; top: -20px; right: 20px;">
      <span>{ + } </span>
    </div>
    <!--End mc_embed_signup-->
  </section>
</section>
<script type="text/javascript">
  $(function () {
    setTimeout(function () {
      $('.reveal-tab').click();
    }, 2500);
  });

</script>
