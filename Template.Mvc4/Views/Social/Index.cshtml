@model IEnumerable<Template.Mvc4.Models.Contact>
@{
  ViewBag.Title = "Knockout Contacts";
}
@{if (false)
  {
  <script src="Social.js" type="text/javascript"></script>
  <script src="/Content/lib/jquery/jquery-1.7.1.min.js" type="text/javascript"></script> 
  }
}
<br />
<br />
<div class="triggers">
  <ul>
    <li class="new-item">
      <input type="text" placeholder="New Trigger" class="title" data-bind="value: triggerToAddTitle"
        name="Title" />
      <input type="text" class="date" placeholder="Date" data-bind="value: triggerToAddDate"
        name="Date" />
      <button data-bind="click: addTrigger" class="btn add primary">+ Add Trigger</button>
    </li>
  </ul>
  <ul data-bind="foreach: triggers">
    <li class="trigger" data-bind="event: {mouseover: $root.selectTrigger}">
      <div class="summary">
        <span class='date' data-bind="text: niceDate"></span><span class='title' data-bind="text: title">
        </span>
        <ul data-bind="foreach: actions" class="actions">
          <li class="action" style="display: inline-block;">
            <div class="channel">
              <span class="date" data-bind="text: niceDate"></span><span data-bind="text: channel"></span>
              <button class="btn delete danger" data-bind="click: $root.removeActionFromTrigger">
                x</button>
            </div>
          </li>
        </ul>
        <span><button class="btn delete danger" data-bind="click: $root.removeTrigger">x</button></span>
      </div>
      <div class="details" style="display: none;">
        <div class="new-item action">
          <input placeholder="Date" name="Date1" class="date" type="text" data-bind="value: $data.addActionDate" />
          <input placeholder="Channel" name="Channel" type="text" data-bind="value: $data.addActionChannel" />
          <button data-bind="click: $root.addActionToTrigger" class="btn add primary">+ Add Action</button>
        </div>
        <!-- actions -->
        <ul data-bind="foreach: actions" style="display: none;">
          <li class="action"><span data-bind="text: niceDate"></span>
            <div class="channel">
              <span data-bind="text: channel"></span>
              <button class="btn delete danger" data-bind="click: $root.removeActionFromTrigger">
                x</button>
            </div>
          </li>
        </ul>
        <div class="tabs" style="display: none;">
          <ul>
            <li>
              <a href="#tabs-1">Simple View</a></li>
            <li>
              <a href="#tabs-2">Calendar View</a></li>
          </ul>
          <div id="tabs-1">
            <ul data-bind="foreach: actions">
              <li class="action" data-bind="click: $parent.selectAction"><span data-bind="text: niceDate">
              </span>
                <div class="channel">
                  <span data-bind="text: channel"></span>
                  <button class="btn delete danger">x</button>
                </div>
              </li>
            </ul>
          </div>
          <div id="tabs-2" class="calendar">
            <div class="outer-div">
              <div class="inner-div">
                <table>
                  <thead>
                    <tr>
                      <th class="nogb" colspan="2"></th>
                      <th colspan="4" class="top-header">Channels</th>
                    </tr>
                    <tr>
                      <th class="header-first">Date </th>
                      <th colspan="2">
                        <div>
                          linkedin</div>
                      </th>
                      <th>
                        <div>
                          facebook</div>
                      </th>
                      <th>
                        <div>
                          meetup</div>
                      </th>
                      <th>
                        <div>
                          twitter</div>
                      </th>
                    </tr>
                  </thead>
                  @*                <tfoot>
                  <tr>
                    <td colspan="2"></td>
                    <td>0</td>
                    <td>0</td>
                    <td>0</td>
                    <td>0</td>
                  </tr>
                </tfoot>*@
                  <tbody data-bind="foreach: getRows()">
                    <tr>
                      <td><span data-bind="text: formatMMDD()"></span></td>
                      <td></td>
                      <td>
                        <input type="checkbox" name="linkedin" /></td>
                      <td>
                        <input type="checkbox" name="facebook" /></td>
                      <td>
                        <input type="checkbox" name="meetup" /></td>
                      <td>
                        <input type="checkbox" name="twitter" /></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </li>
  </ul>
</div>
@section pageScripts
{
  <script src="/Views/_Scripts/ko-protected-observable.js" type="text/javascript"></script>
  <script src="/Views/_Scripts/CrudHelpers.js" type="text/javascript"></script>
  <script src="/Views/_Scripts/date.js" type="text/javascript"></script>
  <script src="/Content/lib/knockout/knockout-1.3.0beta.js" type="text/javascript"></script>
  <script src="/Content/lib/knockout/knockout-mapping.js" type="text/javascript"></script>
  <script src="@Url.Content("~/Views/_Scripts/CrudHelpers.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/Views/Social/triggers_viewmodel.js")" type="text/javascript"> </script>
  <script type="text/javascript">
    $(function () {

      $('.tabs').tabs();
      $(document).on("click", '.summary', function () {
        $(this.parentNode).children('.details').toggle('fast')
      });
      $('.new-item .date').datepicker();
    });
  </script>
}
