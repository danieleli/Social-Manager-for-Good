<section class="traditional-calendar">
  <div class="myheader">
    <div>S</div>
    <div>M</div>
    <div>T</div>
    <div>W</div>
    <div>H</div>
    <div>F</div>
    <div>S</div>
  </div>
  <div data-bind="foreach: calendarDays" class="calendar-days">
    <div class="day">
    <div data-bind="text: niceDay"></div>
    <div data-bind="foreach: channels" class="channels">
      <div class="actions" data-bind="foreach: actions">
        <div class="action" data-bind="text: triggerTitle"></div>
      </div>
    </div>
  </div>
  </div>
</section>
<section class="list-calendar">
  <span class="date"></span>
  <ul data-bind="foreach: $root.allChannels()" class="channels calendar-header">
    <li class="channel">
      <span data-bind="text: $data"></span>
    </li>
  </ul>
  <ul data-bind="foreach: calendarDays" class="calendar-days">
    <li class="day">
      <span class="date" data-bind="text: niceDay"></span>
      <ul data-bind="foreach: channels" class="channels">
        <li class="channel">
          <ul class="channel-actions" data-bind="foreach: actions">
            <li>
              <span data-bind="text: triggerTitle"></span>
            </li>
          </ul>
        </li>
      </ul>
    </li>
  </ul>
</section>
