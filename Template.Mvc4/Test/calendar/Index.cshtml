@{
  Layout = null;
}
<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <link href="calendar.less" rel="stylesheet" type="text/css" />
  <script src="/Content/lib/jquery/jquery-1.7.1.js" type="text/javascript"></script>
  <title>Index</title>
</head>
<body>
  <div id="backend-container">
    <h2>
      Back End Version <span>(double click on a day or select 2 different days to edit them
        and view the changes in the Front End Version by clicking refresh; <strong>easy integration
          into your Content Management System; auto resizable and completely customizable
          from CSS</strong>)</span></h2>
    <input type="button" name="refresh1" id="refresh1" class="reload-btn" value="Refresh Calendar" />
    <div id="backend">
    </div>
  </div>
  <script src="/Content/lib/jquery/jquery-ui-1.8.16.js" type="text/javascript"></script>
  <script src="jquery.dop.BookingCalendar.js" type="text/javascript"></script>
  <script type="text/javascript">
    $(document).ready(function () {
      $('#backend').DOPBookingCalendar({
        'Type': 'BackEnd'
      });


      $('#refresh1').click(function () {
        $('#backend').html('');
        $('#backend').DOPBookingCalendar({
          'Type': 'BackEnd'
        });
      });

    });
  </script>
</body>
</html>
