<li class="trigger" data-bind="css: { selected: isSelected()===true }, event: {  mouseover: setHover, mouseout: removeHover }">
  <!-- summary -->
  <div class="summary" data-bind="click: toggleSelectedState">
    <div class="target-icon"></div>
    <span class='title' data-bind="text: title"></span>
    &nbsp
    <span class='date' data-bind="text: niceDate"></span>
  </div>
  <!-- details -->
  <div class="details"> 
    <textarea rows="5" cols="90" data-bind="value: notes" placeholder="notes"></textarea>
    <ul data-bind="foreach: actions" class="actions">
      <li class="action" data-bind="click: $root.showActionDialog">
        <div class="action-icon"  
             data-bind="css: {facebook: $data.channel()==='facebook', twitter: $data.channel()==='twitter', meetup: $data.channel()==='meetup'} " >
        </div>
        <span class="action-date" data-bind="text: niceDate"></span>
      </li>
    </ul>
    <div class="new-item action">
      <div class="channel">
        <div class="action-icon facebook">
        </div>
        <input type="radio" name="channel" title="facebook" value="facebook"  data-bind="checked: addActionChannel">
      </div>
      <div class="channel">
        <div class="action-icon meetup">
        </div>
        <input type="radio" name="channel" title="meetup" value="meetup" data-bind="checked: addActionChannel">
      </div>
      <div class="channel">
        <div class="action-icon twitter">
        </div>
        <input type="radio" name="channel" title="twitter" value="twitter" data-bind="checked: addActionChannel">
      </div>
      
      <input placeholder="Date" name="Date1" class="date" type="text" data-bind="value: $data.addActionDate" />
      <div style="height:30px;">
        <input style="display:none;" placeholder="New Channel" class="other-channel" name="other-channel" type="text"
               data-bind="value: $data.addActionChannel" />
        <button data-bind="click: $root.addActionToTrigger" class="btn add primary">+ Add
          Action</button>
      </div>
    </div>

    <div class="buttons">
      <span>&nbsp</span>
      <button class="btn delete danger" data-bind="click: $root.removeTrigger">Delete Campaign</button></div>
  </div>
</li>
