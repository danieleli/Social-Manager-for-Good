<section class="traditional-calendar">
  <div class="myheader" style="position:relative;">
    <div>Sun</div>
    <div>Mon</div>
    <div>Tue</div>
    <div>Wed</div>
    <div>Thu</div>
    <div>Fri</div>
    <div>Sat</div>
    <img src="/Content/Images/rss-icon.jpg" width="30px" height="20px" alt="Subscribe to your calendar feed coming soon." title="Subscribe to your calendar feed coming soon." style="position:absolute; right: -40px; top: 5px;"/>
  </div>
  <div data-bind="foreach: calendarDays" class="calendar-days">
    <div class="day">
      <div style="display: block;" data-bind="text: niceDay"></div>
      <div data-bind="foreach: topics" class="topics tooltip-wrapper">
        <div class="target">
          <div class="tooltip">
            <div class="tip">
              <p data-bind="text: title"></p>
            </div>
            <div class="tooltip-arrow"></div>
          </div>
        </div>
      </div>
      <div data-bind="foreach: actions" class="topic-actions">
        <div class="tooltip-wrapper">
          <div class="campaign-action" data-bind="css: {facebook: channel()==='facebook', twitter: channel()==='twitter', meetup: channel()==='meetup'  }">
            <div class="tooltip">
              <div class="tip">
                <p data-bind="text: topicTitle"></p>
              </div>
              <div class="tooltip-arrow"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  $(function () {
    setTimeout(setCalendarHover, 1000);

    function setCalendarHover() {

      $('.campaign-action').off('click');
      $('.campaign-action').on('hover', function (event) {
        $(this.children).toggle('fast');
      });
      $('.target').off('click');
      $('.target').on('hover', function (event) {
        $(this.children).toggle('fast');
      });
    };
  });

</script>
